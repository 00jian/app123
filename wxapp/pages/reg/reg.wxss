/* pages/reg/reg.wxss */

page {
  font-size: 14px;
  background-color: #f3f3f3;
}

._input {
  margin-top: 5px;
  background-color: #fff;
  border: 1px solid #ccc;
  width: 96%;
  margin-left: 2%;
}

._image {
  line-height: 30px;
  padding: 10px;
  display: inline-block;
}

._image_input {
  line-height: 30px;
  vertical-align: top;
  padding: 10px 0px;
  display: inline-block;
}

._image_input input {
  vertical-align: bottom;
}

image {
  vertical-align: middle;
  height: 20px;
  width: 20px;
}

._info {
  font-size: 12px;
  padding: 10px;
  text-align: center;
}
